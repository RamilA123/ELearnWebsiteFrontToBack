@model EventDetailVM
@{
    ViewData["Title"] = "Detail";
}
<style>

    .info {
        margin-left: 15%;
        margin-top: 10px;
        margin-bottom: 10px;
    }

        .info h2 {
            font-size: 24px;
            font-weight: bold;
        }

        .info p {
            font-size: 16px;
            margin-bottom: 10px;
        }

</style>
<div class="detail-view">

    <div class="info">
        <h2>@Model.Title</h2>
        <p>@Model.Description</p>
        <p>@Model.Date</p>
        <a asp-controller="Event" asp-action="Index" class="btn btn-danger">Back</a>
    </div>

</div>



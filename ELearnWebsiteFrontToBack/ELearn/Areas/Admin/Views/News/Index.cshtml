@model List<NewsVM>
@{
    ViewData["Title"] = "News";
}
<style>
    td img {
        width: 100px;
        height: 50px;
    }

    button {
        cursor: pointer;
    }
</style>
<h1 style="text-align:center; margin-top:10px">News</h1>

<div style="padding-left: 20.5rem !important;" class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Image</th>
                            <th scope="col">CreateDate</th>
                            <th scope="col">Title</th>
                            <th scope="col">Author</th>
                            <th scope="col">Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/images/@item.Image" /></td>
                                <td>@item.Date</td>
                                <td>@item.Title</td>
                                <td>@item.Author</td>
                                <td><a asp-controller="News" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

